<!DOCTYPE html>
<html lang="en" style="height: 100%;">
    <head>
        <%- include("./../../partials/head.ejs"); -%>
        <%- include("./../../partials/sweet-alert-head.ejs"); -%>
        <%- include("./../../partials/confirm-modal.ejs"); -%>
    </head>

    <body class="hold-transition dark-mode" style="height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <div class="login-box" id="login-form">
            <div class="card">
                <%- include("./../../partials/authentication/brand.ejs"); -%>

                <div class="card-body">
                    <form action="/login" method="post" class="mb-2" onsubmit="return confirmModal('form', this, {elementId: 'login-form'});">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="username" placeholder="Username" required/>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input type="password" class="form-control" name="password" placeholder="Password" required/>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        </div>

                        <p class="m-0 p-0">
                            <a href="/laporan">Lapor?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>

        <%- include("./../../partials/authentication/copyright.ejs"); -%>

        <%- include("./../../partials/script.ejs"); -%>
    </body>

    <%- include("./../../partials/toast-script.ejs"); -%>
</html>
