<script>
    function confirmModal(type, value, option={}) { 
        const swalOption = {
            title: "Apakah anda yakin?",
            icon: "question",
            iconColor: "#f8f9fa",
            focusConfirm: false,
            showCancelButton: true,
            confirmButtonText: "Iya",
            cancelButtonText: "Tidak",
            confirmButtonColor: "#48c774",
            cancelButtonColor: "#F14668",
        };

        if (option.elementId != undefined) {
            document.getElementById(option.elementId).style.display = "none";
        };

        if (option.text != undefined) {
            swalOption.html = option.text;
        };
        
        Swal.fire(swalOption).then((result) => {
            if (result.isConfirmed) {
                if (type == "location") {
                    window.location = value;
                }
                
                else if (type == "form") {
                    value.submit();
                };
            } else {
                if (option.elementId != undefined) {
                    setTimeout(function() { document.getElementById(option.elementId).style.display = "block"; }, 200);
                };
            };
        });

        return false;
    };
</script>